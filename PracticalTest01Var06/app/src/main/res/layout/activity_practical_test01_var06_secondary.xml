<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var06.PracticalTest01Var06SecondaryActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secAddrEdit"
        android:ems="7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secPassEdit"
        android:ems="7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="252dp"
        android:layout_marginStart="252dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok_butt"
        android:id="@+id/okButton"
        android:layout_below="@+id/secAddrEdit"
        android:layout_alignRight="@+id/secAddrEdit"
        android:layout_alignEnd="@+id/secAddrEdit"
        android:layout_marginTop="71dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_butt"
        android:id="@+id/cancelButton"
        android:layout_alignBottom="@+id/okButton"
        android:layout_alignRight="@+id/secPassEdit"
        android:layout_alignEnd="@+id/secPassEdit"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />
</RelativeLayout>
