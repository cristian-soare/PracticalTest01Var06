<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var06.PracticalTest01Var06MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/firstEdit"
        android:text="Student"
        android:saveEnabled="false"/>
    <Button
        android:id="@+id/lessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/less_details"
        android:layout_below="@+id/firstEdit"
        android:layout_alignRight="@+id/firstEdit"
        android:layout_alignEnd="@+id/firstEdit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lessButton"
        android:orientation="horizontal"
        android:id="@+id/tohide">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addr_edit"
            android:ems="12"
            android:inputType="textUri"
            android:saveEnabled="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passButton"
            android:ems="5"
            android:text="@string/pass_butt"
            android:background="@color/colorPassInvalid"
            android:enabled="false"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tohide"
        android:layout_centerHorizontal="true"
        android:text="@string/navig_name"
        android:id="@+id/navig_butt"/>
</RelativeLayout>
